{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "outDir": "build",
        "rootDir": ".", // Changed back to "." to include scripts directory
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowArbitraryExtensions": false,
        "paths": {
            "#root/*": ["./src/*"],
            "#shared/*": ["./src/shared/*"],
            "#auth/*": ["./src/modules/auth/*"],
            "#courses/*": ["./src/modules/courses/*"],
            "#users/*": ["./src/modules/users/*"],
            "#quizzes/*": ["./src/modules/quizzes/*"]
        },
        "types": ["node", "express"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "build",
        "dist",
        "**/*.spec.ts",
        "**/*.d.ts",
        "vite.config.ts"
    ]
}